    "@types/three": "^0.141.0",
    "concurrently": "^7.2.1",
    "copy-and-watch": "^0.1.6",
    "esbuild": "^0.14.42",
    "http-server": "^14.1.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "three": "^0.141.0",
    "typescript": "^4.7.3"
  },
